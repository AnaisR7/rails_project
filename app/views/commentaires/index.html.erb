<h1>Listing commentaires</h1>

<table>
  <thead>
    <tr>
      <th>Contenu</th>
      <th>Date</th>
      <th>Auteur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commentaires.each do |commentaire| %>
      <tr>
        <td><%= commentaire.contenu %></td>
        <td><%= commentaire.date %></td>
        <td><%= commentaire.auteur %></td>
        <td><%= link_to 'Voir', commentaire %></td>
        <td><%= link_to 'Modifier', edit_commentaire_path(commentaire) %></td>
        <td><%= link_to 'Supprimer', commentaire, method: :delete, data: { confirm: 'ÃŠtes-vous sur ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

